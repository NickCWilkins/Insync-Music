<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<Pane maxHeight="50.0" minHeight="50.0" prefHeight="50.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MusicBarController">
   <children>
      <Label fx:id="titleLabel" alignment="CENTER" layoutY="4.0" prefHeight="17.0" prefWidth="800.0" styleClass="title" text="Welcome to Insync Music" textAlignment="CENTER" />
      <Label fx:id="currentTimeLabel" layoutX="167.0" layoutY="25.0" text="0:00" />
      <Slider fx:id="scrubber" layoutX="200.0" layoutY="26.0" onMousePressed="#OnSliderMouseDown" onMouseReleased="#OnSliderMouseUp" prefHeight="15.0" prefWidth="400.0" />
      <Label fx:id="remainingTimeLabel" layoutX="610.0" layoutY="25.0" text="0:00" />
      <ImageView fx:id="nextBtn" fitHeight="25.0" fitWidth="25.0" layoutX="105.0" layoutY="16.0" onMouseClicked="#OnNextClicked" styleClass="musicControl">
         <image>
            <Image url="@../img/next.png" />
         </image>
      </ImageView>
      <ImageView fx:id="backBtn" fitHeight="25.0" fitWidth="25.0" layoutX="30.0" layoutY="16.0" onMouseClicked="#OnBackClicked" styleClass="musicControl">
         <image>
            <Image url="@../img/back.png" />
         </image>
      </ImageView>
      <ImageView fx:id="playBtn" fitHeight="30.0" fitWidth="30.0" layoutX="65.0" layoutY="13.0" onMouseClicked="#OnPlayClicked" styleClass="musicControl">
         <image>
            <Image url="@../img/pause.png" />
         </image>
      </ImageView>
      <ImageView fx:id="repeatBtn" fitHeight="22.0" fitWidth="27.0" layoutX="662.0" layoutY="22.0" onMouseClicked="#OnRepeatClicked" styleClass="musicControl">
         <image>
            <Image url="@../img/repeat.png" />
         </image>
      </ImageView>
      <ImageView fx:id="shuffleBtn" fitHeight="22.0" fitWidth="27.0" layoutX="709.0" layoutY="22.0" onMouseClicked="#OnShuffleClicked" styleClass="musicControl">
         <image>
            <Image url="@../img/shuffle.png" />
         </image>
      </ImageView>
   </children>
</Pane>
